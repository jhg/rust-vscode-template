{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rust: cargo check - {{project-name}}",
            "type": "cargo",
            "subcommand": "check",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Rust: cargo build - {{project-name}}",
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Rust: cargo test - {{project-name}}",
            "type": "cargo",
            "subcommand": "test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "Rust: cargo doc - {{project-name}}",
            "type": "shell",
            "command": "cargo",
            "args": ["doc"],
            "group": "none"
        },
        {
            "label": "Rust: cargo doc --open - {{project-name}}",
            "type": "shell",
            "command": "cargo",
            "args": ["doc", "--open"],
            "group": "none"
        }
    ]
}
